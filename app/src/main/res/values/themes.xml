<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Apex" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Apex.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/apex_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_apex_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Apex</item>
    </style>
</resources>
